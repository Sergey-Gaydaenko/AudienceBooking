@using Booking.Web.Localization
@model Booking.Web.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = @Localization.Register;
    ViewBag.ActiveLink = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <br/>

    @Html.ValidationSummary(true, "", new {@class = "validation-summary-error"})

    <div class="form-group">
        @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "validation-error"})
        @Html.TextBoxFor(m => m.UserName, new {@class = "login-input", placeholder = Localization.UserNamePlaceholder})
    </div>

    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "validation-error"})
        @Html.TextBoxFor(m => m.Email, new {@class = "login-input", placeholder = Localization.EmailAddressPlaceholder})
    </div>

    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "validation-error"})
        @Html.PasswordFor(m => m.Password, new {@class = "login-input", placeholder = Localization.PasswordPlaceholder})
    </div>

    <div class="form-group">
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "validation-error"})
        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "login-input", placeholder = Localization.ConfirmPasswordPlaceholder})
    </div>

    <input type="submit" disabled="disabled" value=@Localization.RegisterSubmit class="login-submit"/>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/project/login.js")
}
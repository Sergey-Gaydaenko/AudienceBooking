@using Booking.Web.Localization
@using Booking.Web.ViewModels.Account
@model LoginViewModel

@{
    ViewBag.Title = @Localization.Login;
    ViewBag.ActiveLink = "Login";
}

@*<h2>@ViewBag.Title.</h2>*@
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <br/>
                <br/>
                @Html.ValidationSummary(true, "", new { @class = "validation-error" })

                <div class="col-md-10" style="font-size: 20px !important;">
                    @Html.TextBoxFor(m => m.Email, new { @class = "login-input", placeholder = Localization.EmailAddressPlaceholder })
                </div>

                <div class="col-md-10" style="margin-top: 20px !important;">
                    @Html.PasswordFor(m => m.Password, new { @class = "login-input", placeholder = Localization.PasswordPlaceholder })
                </div>

                <div class="col-md-10" style="font-size: 20px !important">
                    <input type="submit" disabled="disabled" class="login-submit" value=@Localization.LoginSubmit />
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
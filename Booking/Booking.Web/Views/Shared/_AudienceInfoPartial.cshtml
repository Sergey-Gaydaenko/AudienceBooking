@using Booking.Enums
@model Booking.Web.ViewModels.Audience.AudienceInfoViewModel

@{
    string linePath = "";
    string linePosition = "";

    switch (Model.Id)
    {
        case AudiencesEnum.HrOffice:
            linePath = "line-details-hr.png";
            linePosition = "left: 260px";
            break;
        case AudiencesEnum.EinsteinClassroom:
            linePath = "line-details-einstein.png";
            linePosition = "right: 510px";
            break;
        case AudiencesEnum.English:
            linePath = "line-details-english.png";
            linePosition = "right: 27px";
            break;
        case AudiencesEnum.TeslaClassroom:
            linePath = "line-details-tesla.png";
            linePosition = "left: 450px";
            break;
        case AudiencesEnum.NewtonClassroom:
            linePath = "line-details-newton.png";
            linePosition = "right: 360px";
            break;
        case AudiencesEnum.InfoCenter:
            linePath = "line-details-info.png";
            linePosition = "right: 365px";
            break;
        case AudiencesEnum.WebAndMarketing1:
            linePath = "line-details-web-1.png";
            linePosition = "right: 265px";
            break;
        case AudiencesEnum.WebAndMarketing2:
            linePath = "line-details-web-2.png";
            linePosition = "right: 165px";
            break;
        case AudiencesEnum.WebAndMarketing3:
            linePath = "line-details-web-3.png";
            linePosition = "right: 65px";
            break;
    }
}

<img class="line-details" style="@linePosition" src="@Url.Content("~/Content/Images/line-details/" + linePath)"/>

<div class="audience-info-container">
    <img src="@Url.Content("~/Content/Images/audience-info-icons/icon-table.png")"/>
    <span>@Model.SeatsCount</span>

    @if (Model.BoardsCount > 0)
    {
        <img src="@Url.Content("~/Content/Images/audience-info-icons/icon-board.png")"/>
        if (Model.BoardsCount == 1)
        {
            <div class="space-filler"></div>
        }
        else
        {
            <span>@Model.BoardsCount</span>
        }
    }

    @if (Model.LaptopsCount > 0)
    {
        <img src="@Url.Content("~/Content/Images/audience-info-icons/icon-laptop.png")"/>
        if (Model.LaptopsCount == 1)
        {
            <div class="space-filler"></div>
        }
        else
        {
            <span>@Model.LaptopsCount</span>
        }
    }

    @if (Model.PrintersCount > 0)
    {
        <img src="@Url.Content("~/Content/Images/audience-info-icons/icon-print.png")"/>
        if (Model.PrintersCount == 1)
        {
            <div class="space-filler"></div>
        }
        else
        {
            <span>@Model.PrintersCount</span>
        }
    }

    @if (Model.ProjectorsCount > 0)
    {
        <img src="@Url.Content("~/Content/Images/audience-info-icons/icon-proect.png")"/>
        if (Model.ProjectorsCount > 1)
        {
            <span>@Model.ProjectorsCount</span>
        }
    }
</div>
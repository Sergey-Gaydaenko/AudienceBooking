@model Booking.Web.ViewModels.AdminPanel.CreateAudienceViewModel

<div>
    @using (Html.BeginForm("CreateAudience", "AdminPanel", FormMethod.Post, new {enctype = "multipart/form-data", id = "new-audience-form"}))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name)
        </div>

        <div class="form-group">
            <input type="checkbox" id="checkbox-booking" name="IsBookingAvailable" value=true @(Model.IsBookingAvailable ? "checked" : "")/>
            <label for="checkbox-booking">
                <span></span>Allow booking
            </label>
            <input name="IsBookingAvailable" type="hidden" value="false"/>
        </div>


        @Html.HiddenFor(m => m.AudienceMapId)

        @Html.HiddenFor(m => m.Left)
        @Html.HiddenFor(m => m.Top)
        @Html.HiddenFor(m => m.Width)
        @Html.HiddenFor(m => m.Height)

        <div class="form-group">
            @Html.LabelFor(m => m.SeatsCount)
            @Html.EditorFor(m => m.SeatsCount)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.BoardsCount)
            @Html.EditorFor(m => m.BoardsCount)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LaptopsCount)
            @Html.EditorFor(m => m.LaptopsCount)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PrintersCount)
            @Html.EditorFor(m => m.PrintersCount)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProjectorsCount)
            @Html.EditorFor(m => m.ProjectorsCount)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.RouteImage)
            @Html.TextBoxFor(x => x.RouteImage, new {type = "file"})
            @Html.ValidationMessageFor(x => x.RouteImage)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.LineDetailsImage)
            @Html.TextBoxFor(x => x.LineDetailsImage, new {type = "file"})
            @Html.ValidationMessageFor(x => x.LineDetailsImage)
        </div>

        <button type="submit" class="btn btn-primary">Upload</button>
    }
</div>
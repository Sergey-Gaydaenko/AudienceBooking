@using Booking.Web.Localization
@using PagedList.Mvc

@model PagedList.IPagedList<Booking.Models.ApplicationUser>

@{
    ViewBag.ActiveLink = "Users";
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="page-container container">
    <h2 style="padding-top: 20px">@Localization.UserList</h2>
    <h4>@Localization.All</h4>
    <div id="users">
        <table cellspacing="5" cellpadding="10">

            @foreach (var user in Model)

            {
                <tr>
                    <td>
                        <p> @user.UserName </p>
                    </td>
                    <td>
                        <p>@user.Email</p>
                    </td>
                    <td>
                        <p> @user.Id</p>
                    </td>
                </tr>
            }
        </table>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))



        </div>
       
    </div>

